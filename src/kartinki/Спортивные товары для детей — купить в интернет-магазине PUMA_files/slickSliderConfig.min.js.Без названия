define([],function(){return function(contentNumber){function getSlidesCount(device){let slidesCount=1;if(device==="tablet"){slidesCount=contentNumber>=3?3:contentNumber;}else if(device==="mobile"){slidesCount=contentNumber>=2?2:contentNumber;}else{slidesCount=contentNumber>=4?4:contentNumber;}
return slidesCount;}
return{infinite:false,slidesToShow:getSlidesCount(),swipeToSlide:true,responsive:[{breakpoint:1025,settings:{slidesToShow:getSlidesCount("tablet")}},{breakpoint:768,settings:{slidesToShow:getSlidesCount("mobile")}}]};};});